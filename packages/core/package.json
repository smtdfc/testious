{
  "name": "testious",
  "version": "1.2.0",
  "description": "A simple and extensible testing framework designed to provide a clean and efficient way to write and run tests.",
  "license": "MIT",
  "author": "smtdfc <me.smtdfc@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "clean": "shx rm -rf dist",
    "prepublishOnly": "shx cp ../../LICENSE . && npm run clean && npm run build:prod"
  },
  "keywords": [
    "framework",
    "testing",
    "nodejs",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smtdfc/testious.git"
  },
  "bugs": {
    "url": "https://github.com/smtdfc/testious/issues"
  },
  "homepage": "https://github.com/smtdfc/testious#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {}
}
