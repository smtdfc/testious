{
  "name": "testious-server",
  "version": "0.1.0",
  "description": "Lightweight HTTP server for the Testious framework, enabling test result collection, static file serving, and seamless browser-based test execution",
  "license": "MIT",
  "author": "smtdfc <me.smtdfc@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "data/",
    "dist/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "clean": "shx rm -rf dist",
    "prepublishOnly": "shx cp ../../LICENSE . && npm run clean && npm run build:prod"
  },
  "keywords": [
    "framework",
    "testing",
    "nodejs",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smtdfc/testious.git"
  },
  "bugs": {
    "url": "https://github.com/smtdfc/testious/issues"
  },
  "homepage": "https://github.com/smtdfc/testious/tree/main/packages/server#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^5.1.0",
    "testious": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^5.0.3"
  }
}
